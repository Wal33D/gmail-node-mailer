{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules", "src/__tests__", "**/*.test.ts", "**/*.spec.ts"]
}
